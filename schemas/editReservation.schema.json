{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Edit Reservation",
    "type": "object",
    "properties": {
      "reservationId": { "type": "string", "pattern": "^[a-fA-F0-9]{24}$" },
      "newDate": { "type": "string", "format": "date" },
      "newStartTime": { "type": "string", "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$" },
      "newEndTime": { "type": "string", "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$" },
      "newDescription": { "type": "string", "maxLength": 200 }
    },
    "required": ["reservationId", "newDate", "newStartTime", "newEndTime", "newDescription"]
  }
